<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avigail.lastproject.ProfilePage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:textSize="25dp"
        android:text="@string/user_profile"
        android:textAlignment="center"
        android:textColor="@color/darkGray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="Update your details"
        android:textColor="@color/darkGray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="67dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="60dp"
        android:padding="20dp"
        android:background="@color/transparentGreen">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:paddingBottom="20dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/user" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="admin@gmail.com"
            android:paddingTop="20dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:id="@+id/name"
             />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="Admin Admin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/no_form_label"
            android:textSize="23dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:padding="20dp"
            android:background="@color/transparentGreen"
            android:layout_gravity="center"
            android:text="@string/no_form_label"
            android:visibility="gone"/>
    </RelativeLayout>

</FrameLayout>
